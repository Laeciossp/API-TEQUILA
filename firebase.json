{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "flight-api",  // <-- IMPORTANTE: CONFIRME que "flight-api" é o nome EXATO do seu serviço Cloud Run
          "region": "us-central1"     // <-- IMPORTANTE: CONFIRME que "us-central1" é a região EXATA do seu serviço Cloud Run
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
